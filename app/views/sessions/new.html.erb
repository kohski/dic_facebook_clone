<h1 class="top">Log in</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <div class="container-fluid">
    <div class="row">
      <%= f.label :email,class: "col-xs-offset-2 col-xs-2" %>
      <%= f.text_field :email,class: "col-xs-6" %>
    </div>
    <div class="row">
      <%= f.label :password,class: "col-xs-offset-2 col-xs-2" %>
      <%= f.password_field :password,class: "col-xs-6" %>    
    </div>
    <div class="row submit_row">
      <%= f.submit "log in",class: "btn btn-default" %>
    </div>
  </div>
<% end %>

